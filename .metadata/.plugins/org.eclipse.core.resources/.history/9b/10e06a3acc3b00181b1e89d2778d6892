/**
 * 	Given two binary strings, return their sum (also a binary string).
	(给定两个二进制字符串，返回它们的和（也是一个二进制字符串）。)

	For example,
	a = "11"
	b = "1"
	Return "100".

 * @author Time
 *
 */
public class AddBinary {

	public String addBinary(String a, String b) {
		String result = "";
		
		int len_a = a.length(), len_b = b.length(), len = len_a > len_b ? len_a : len_b;
		int[] c = new int[len + 1];
		
		for(int i = 1; i <= (len_a < len_b ? len_a : len_b); i++) {
			if(a.charAt(len_a - i) == 0 && b.charAt(len_b - i) == 0) { result = "0" + result; c[i] = 0;}
			if(a.charAt(len_a - i) == 0 && b.charAt(len_b - i) == 1) { result = "1" + result; c[i] = 0;}
			if(a.charAt(len_a - i) == 1 && b.charAt(len_b - i) == 0) { result = "1" + result; c[i] = 0;}
			if(a.charAt(len_a - i) == 1 && b.charAt(len_b - i) == 1) { result = "0" + result; c[i] = 1;}
			
		}
		
		
		
		
		
		return result;

	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
